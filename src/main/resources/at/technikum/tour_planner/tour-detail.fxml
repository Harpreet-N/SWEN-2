<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox style="-fx-border-color: grey;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.technikum.tour_planner.controllers.TourDetailController">

    <HBox>
        <Label alignment="CENTER" prefHeight="25.0" prefWidth="73.0" text="Title:" />

        <TextField fx:id="nameTextField" text="" HBox.hgrow="ALWAYS">
        <HBox.margin>
            <Insets left="20.0" />
        </HBox.margin></TextField>
    </HBox>
    <SplitPane orientation="VERTICAL" VBox.vgrow="ALWAYS">

    <TabPane tabClosingPolicy="UNAVAILABLE">
                <tabs>
                    <Tab fx:id="routeTab" text="Route">
                        <VBox>
                            <HBox>
                                <Label prefWidth="70" text="Name">
                        <padding>
                           <Insets right="10.0" />
                        </padding></Label>
                                <TextField fx:id="tourName" text="" HBox.hgrow="ALWAYS" />
                            </HBox>
                            <HBox>
                                <Label prefWidth="70" text="From">
                        <padding>
                           <Insets right="10.0" />
                        </padding></Label>
                                <TextField fx:id="tourFrom" text="" HBox.hgrow="ALWAYS" />
                            </HBox>
                            <HBox>
                                <Label prefWidth="70" text="To">
                        <padding>
                           <Insets right="10.0" />
                        </padding></Label>
                                <TextField fx:id="tourTo" text="" HBox.hgrow="ALWAYS" />
                            </HBox>
                            <HBox>
                                <Label prefWidth="70" text="Transport">
                        <padding>
                           <Insets right="10.0" />
                        </padding></Label>
                                <TextField fx:id="tourTransport" text="" HBox.hgrow="ALWAYS" />
                            </HBox>
                            <HBox>
                                <Label prefWidth="70" text="Distance">
                        <padding>
                           <Insets right="10.0" />
                        </padding></Label>
                                <TextField fx:id="tourDistance" text="" HBox.hgrow="ALWAYS" />
                            </HBox>
                            <HBox>
                                <Label prefWidth="70" text="Duration">
                        <padding>
                           <Insets right="10.0" />
                        </padding></Label>
                                <TextField fx:id="tourDuration" text="" HBox.hgrow="ALWAYS" />
                            </HBox>
                  <Button fx:id="updateButton" onAction="#onUpdateButton" alignment="CENTER" mnemonicParsing="false" text="Update" textAlignment="CENTER" />
                        </VBox>

                    </Tab>
                    <Tab fx:id="descriptionTab" text="Description">
                        <TextArea />
                    </Tab>
                </tabs>
            </TabPane>
    </SplitPane>

</VBox>
