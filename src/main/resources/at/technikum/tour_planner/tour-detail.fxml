<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.14-internal"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.technikum.tour_planner.controllers.TourDetailController"
      style="-fx-border-color: grey;">

    <HBox>
        <Label alignment="CENTER" prefHeight="25.0" prefWidth="73.0" text="Title:" />

        <TextField fx:id="nameTextField" text="" HBox.hgrow="ALWAYS">
        <HBox.margin>
            <Insets left="20.0" />
        </HBox.margin></TextField>
    </HBox>
    <SplitPane dividerPositions="0.5" orientation="VERTICAL" VBox.vgrow="ALWAYS">

    <TabPane tabClosingPolicy="UNAVAILABLE">
                <tabs>
                    <Tab fx:id="routeTab" text="Route">
                        <AnchorPane />
                    </Tab>
                    <Tab fx:id="descriptionTab" text="Description">
                        <TextArea />
                    </Tab>
                </tabs>
            </TabPane>
    </SplitPane>

</VBox>
